{
  "name": "eventflow-backend",
  "version": "1.0.0",
  "description": "GraphQL API for EventFlow - An Event Management Platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && node dist/index.js\"",
    "dev:full": "npm run db:start && npm run dev",
    "build": "npm run clean && tsc && node export-schema.js",
    "export-schema": "node export-schema.js",
    "clean": "rimraf dist",
    "db:start": "docker compose up -d mongodb",
    "db:stop": "docker compose stop mongodb",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --format json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node dist/seed.js",
    "test:ci": "jest --ci --coverage",
    "check": "npm run typecheck && npm run lint && npm run format:check"
  },
  "keywords": [
    "graphql",
    "apollo",
    "express",
    "event-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@as-integrations/express4": "^1.1.2",
    "bcryptjs": "^3.0.3",
    "dataloader": "^2.2.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "graphql": "^16.8.1",
    "graphql-query-complexity": "^1.1.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^6.0.6",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.2",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@apollo/server": "^5.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
